<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen5">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/front_camera">
        <TextView
            android:id="@+id/hello_1"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello 1"/>
    </HorizontalScrollView>
    <ImageButton
        android:id="@+id/front_camera"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/bmw"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="openCameraFC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"
            android:onClick="openScreen1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:layout_weight="1"
            android:onClick="openScreen6"/>
    </LinearLayout>

</RelativeLayout>